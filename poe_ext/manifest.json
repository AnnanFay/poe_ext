{
  "name": "poe_plus",
  "version": "0.30",
  "manifest_version": 2,

  "description": "Does path of exile stuff.",

  "background": {
    "page": "background.html"
  },

  "app": {
    "launch": {
      "local_path": "main.html",
      "container": "panel",
      "width": 1280,
      "height":1024
    }
  },
  
  "update_url": "https://github.com/TehJumpingJawa/poe_ext/raw/master/poe_updates.xml",

  "permissions": ["http://www.pathofexile.com/*","http://webcdn.pathofexile.com/*", "clipboardWrite", "clipboardRead"]
}